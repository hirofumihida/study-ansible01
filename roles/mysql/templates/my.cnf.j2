[mysqld]
datadir=/var/lib/mysql
socket=/var/lib/mysql/mysql.sock
user=mysql
# Disabling symbolic-links is recommended to prevent assorted security risks
symbolic-links=0
port={{ mysql_port }}

[mysqld_safe]
log-error=/var/log/{% if mysql_project_name == 'mariadb' %}mariadb/{% endif %}/{{ mysql_daemon_name }}.log
pid-file=/var/run/{{ mysql_daemon_name }}/{{ mysql_daemon_name }}.pid
